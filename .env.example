# =========================================
# BDNS CORE - Environment Variables Template
# =========================================
# Copy this file to .env.development for local development
# Both bdns_portal and bdns_etl will inherit these settings

# =========================================
# ENVIRONMENT
# =========================================

# Environment mode: "development" | "production"
# - development: loads .env.development
# - production: loads .env
ENVIRONMENT=development

# =========================================
# DATABASE CONFIGURATION
# =========================================

# Primary database URL (choose one method)
# Method 1: Full URL
DATABASE_URL=postgresql://bdns_user:password@localhost:5432/bdns

# Method 2: Individual components (used as fallback if DATABASE_URL not set)
DB_USER_LOCAL=postgres
DB_PASSWORD_LOCAL=postgres
DB_HOST_LOCAL=localhost
DB_PORT_LOCAL=5432
DB_NAME_LOCAL=bdns

# Async database URL (optional, will be auto-generated from DATABASE_URL if not set)
# DATABASE_URL_ASYNC=postgresql+asyncpg://bdns_user:password@localhost:5432/bdns

# Connection Pool Settings
POOL_SIZE=20
POOL_MAX_OVERFLOW=10
POOL_TIMEOUT=30

# SQLAlchemy Echo (set to true to see SQL queries in logs)
SQLALCHEMY_ECHO=false

# =========================================
# JWT AUTHENTICATION
# =========================================

# Secret key for JWT token signing (CHANGE IN PRODUCTION!)
JWT_SECRET_KEY=your-secret-key-change-in-production

# JWT Algorithm
JWT_ALGORITHM=HS256

# Token expiration times
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# =========================================
# LOGGING
# =========================================

LOG_LEVEL=INFO
